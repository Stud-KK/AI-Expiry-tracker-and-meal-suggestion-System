# Server Configuration
NODE_ENV=development
PORT=3002

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/foodwise

# JWT
JWT_SECRET=${JWT_SECRET}  # Set dynamically in the environment
JWT_EXPIRE=30d

# Email Service
EMAIL_API_URL=https://api.emailservice.com/send
EMAIL_API_KEY=${EMAIL_API_KEY}  # Set dynamically in the environment
EMAIL_FROM=notifications@foodwise.com

# Notification Settings
EXPIRY_WARNING_DAYS=3
DEFAULT_LOW_STOCK_THRESHOLD=2

# Twilio (set using environment variables)
REMOVED_SECRET=${REMOVED_SECRET}
REMOVED_SECRET=${REMOVED_SECRET}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Edamam API Keys
EDAMAM_APP_ID=${EDAMAM_APP_ID}
EDAMAM_APP_KEY=${EDAMAM_APP_KEY}
